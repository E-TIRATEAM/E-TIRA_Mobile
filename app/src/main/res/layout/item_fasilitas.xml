<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="16dp"
    android:padding="5dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    android:id="@+id/card_view">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/img_ikon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"
            app:riv_corner_radius="8dp"
            tools:src="@drawable/img_tirta1" />

        <TextView
            android:id="@+id/tv_judul_fasilitas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/primary_label"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_below="@id/img_ikon"
            android:text="Judul"/>

        <TextView
            android:id="@+id/tv_deskripsi_fasilitas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_judul_fasilitas"
            android:layout_marginTop="4dp"
            android:maxLines="3"
            android:text="Deskripsi"
            android:textColor="@color/secondary_label"
            android:textSize="12sp"
            android:textAlignment="center"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>